    <property>
      <content>{{velocity}}
#if ($xcontext.action == 'view' &amp;&amp; $xwiki.hasAccessLevel('view', $xcontext.user, 'PhenoTips.SimilarCases'))
  #set ($suggestionsConfig = $xwiki.getDocument("${doc.space}.SimilarCasesConfiguration").getObject('PhenoTips.SimilarCases'))
  #if ($suggestionsConfig &amp;&amp; "$!{suggestionsConfig.getProperty('enable').value}" == '1')
    #set ($patient = $services.patients.getPatientById($doc.name))
    #set ($patientAccess = $services.permissions.getPatientAccess($patient))
    #if (!$patient.features.isEmpty() &amp;&amp; $patientAccess.isOwner() &amp;&amp;  $patientAccess.getVisibility().compareTo($services.permissions.resolveVisibility('matchable')) &gt;= 0)
      ## Can see similar cases for this patient
      {{html clean=false}}&lt;div data-bind="" class="clear clinical-info similarity-info chapter"&gt;{{/html}}
      == Similar Cases available in remote databases ==
      ==== If the checkbox is ticked the request will be periodic ===
      ##=======================================
      ## Get list of remote configurations. Filter by mutuallyAccepted.
      ## Then display list with checkboxes.
      ## Custom javascript will take care of sending the request, and changing the page display.
      ##=======================================
      #set ($remoteDoc = $xwiki.getDocumentAsAuthor("PhenomeCentral.RemoteMatching"))
      #set ($allRemotes = $remoteDoc.getObjects("PhenomeCentral.RemoteMatchingServiceConfiguration")) ##The xObject name should ideally come from a configuration
      #set ($remotes = []) ##These are filtered
      #foreach ($config in $allRemotes)
        #if ($config.getProperty('mutuallyAccepted').getValue() == 1)
          #set ($discard = $remotes.add($config))
        #end
      #end
      #foreach ($r in $remotes)
         {{html clean=false}}&lt;div&gt;
           &lt;span&gt;&lt;input type="checkbox"&gt;$r.getProperty("humanReadableName").getValue()&lt;/span&gt;
           &lt;span class="buttonwrapper"&gt;&lt;a class="button" href="#"&gt;Send Request&lt;/a&gt;&lt;/span&gt;
         &lt;/div&gt;{{/html}}
      #end
      ##=======================================
      ## [TODO]
      ## Display the results of the searches. These will be custom objects.
      ##=======================================
      {{html clean=false}}&lt;/div&gt;{{/html}}
    #end## can see similar patients
  #end## suggestions enabled
#end## action == view
{{/velocity}}</content>
